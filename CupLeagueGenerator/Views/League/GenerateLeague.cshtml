@using CupLeagueGenerator.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model LeagueModel

<head>
    <link rel="stylesheet" href="~/css/LeagueIndex.css" />
</head>

<body>

    <form class="form" method="post">

        <div class="title">
            <h1>Create League</h1>
            <hr style="color:black" />
            <input type="submit" asp-action="OneLeague" asp-controller="League" value="One League" />
            <input type="submit" asp-action="GenerateLeague" asp-controller="League" value="Normal" />
        </div>
        <hr style="color:black" />

        <div class="form-group">
            <label for="exampleFormControlInput1">League Name</label>
            <input type="text" asp-for="@Model.LeagueName" class="form-control" id="exampleFormControlInput1">
        </div>
        @if (Model.IsOneLeague)
        {
            <div class="form-group">
                <label for="exampleFormControlSelect1">Number of Teams</label>
                <select asp-for="@Model.NumberOfTeams" class="form-control" id="teams">
                    @for (int i = 1; i <= 40; i++)
                    {
                        <option>@i</option>
                    }
                </select>
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="exampleFormControlSelect1">Number of Teams</label>
                <select asp-for="@Model.NumberOfTeams" class="form-control" id="teams">
                    <option>4</option>
                    <option>8</option>
                    <option>16</option>
                    <option>32</option>
                    <option>64</option>
                </select>
            </div>

            <div class="form-group">
                <label for="exampleFormControlSelect1">Teams per group</label>
                <select asp-for="@Model.TeamsPerGroup" class="form-control" id="teamsPerGroup">
                    <option>1</option>
                    <option>2</option>
                    <option>4</option>
                    <option>8</option>
                    <option>16</option>
                    <option>32</option>
                    <option>64</option> 
                </select>
            </div>
        }
        
        <div class="form-group">
            <input type="hidden" asp-for="@Model.IsOneLeague"/>
            <input class="Button" type="submit" asp-action="SaveLeague" asp-controller="League" value="Create" />
        </div>
    </form>

</body>