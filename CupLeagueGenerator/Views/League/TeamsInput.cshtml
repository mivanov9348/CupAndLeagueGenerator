@using CupLeagueGenerator.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model LeagueModel

<head>
    <link rel="stylesheet" href="~/css/cupIndex.css" />
</head>

<body>

    <form class="form" method="post">

        <div class="title">
            <label>@Model.LeagueName</label>
            <hr style="color:black" />
        </div>

        @for (var i = 1; i <= @Model.NumberOfTeams; i++)
        {
            <div class="form-group">
                <label for="exampleFormControlInput1">Team @i</label>
                <input asp-for="@Model.InputParticipants" type="text" class="form-control" required="true" id="exampleFormControlInput1" value="Team @i">
            </div>
        }

        <hr style="margin-left:130px" />
        <div class="form-group">
            <input type="hidden" asp-for="@Model.LeagueName" />
            <input type="hidden" asp-for="@Model.NumberOfTeams" />
            <input type="hidden" asp-for="@Model.TeamsPerGroup" />
            <input class="Button" asp-controller="League" asp-action="AddTeams" type="submit" value="Create" asp-route-leagueId="@Model.LeagueId" />
        </div>

    </form>
</body>
