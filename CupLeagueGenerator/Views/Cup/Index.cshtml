@using CupLeagueGenerator.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model CupModel

<head>
    <link rel="stylesheet" href="~/css/cupIndex.css" />
</head>

<body>

    <form class="form" method="post">

        <div class="title">
            <h1>Create Cup</h1>
            <hr style="color:black" />
        </div>

        <div class="form-group">
            <label for="exampleFormControlInput1">Cup Name</label>
            <input type="text" class="form-control" id="exampleFormControlInput1">
        </div>

        <div class="form-group">
            <label for="exampleFormControlSelect1">Example select</label>
            <select asp-for="Matches" class="form-control" id="exampleFormControlSelect1">
                <option>4</option>
                <option>8</option>
                <option>16</option>
                <option>32</option>
                <option>64</option>
            </select>
        </div>

        <div class="form-group">
            <input class="Button" type="submit" value="Create" />
        </div>

    </form>

</body>