@using CupLeagueGenerator.Infrastructure.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers;
@model CupModel


<head>
    <link rel="stylesheet" href="~/css/cupIndex.css" />
</head>

<body>

    <form method="post">
        <h1 style="text-align:center">Cups</h1>
        <input class="newCupBtn" style="text-align:center" type="submit" asp-action="GenerateCup" value="Create New Cup" />
        <hr />
    </form>
    <form method="post">

        <table class="table">
            <thead>
                <tr>
                    <th>N</th>
                    <th>Cup Name</th>
                    <th>Participants</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.UserCups.Count; i++)
                {
                    var cup = Model.UserCups[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@cup.Name</td>
                        <td>
                            @cup.Participants.Count()
                        </td>
                        <td>
                            <button asp-controller="Cup" asp-action="OpenCup" asp-route-cupId="@cup.Id">Open</button>
                            <button asp-controller="Cup" asp-action="DeleteCup" asp-route-cupId="@cup.Id">Delete</button>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </form>



</body>

