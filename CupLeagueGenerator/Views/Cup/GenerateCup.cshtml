@using CupLeagueGenerator.Infrastructure.Models;
@model CupModel

<style>
    body {
        background-color: grey;
        font-family: "Mandy's Sketch";
    }

    .form {
        margin: 0 auto;
        width: 50%;
        text-align: center;
        font-weight: bolder;
        font-size: 20px;
    }

    input {
        text-align: center;
    }

    .Button {
        margin-left: 20px;
        margin-top: 10px;
        color: black;
        font-weight: bolder;
        background-color: white;
    }

        .Button:hover {
            background-color: gray;
            color: black;
        }

</style>
<body>
<form class="form" method="post">
    <div class="title">
        <h1>Create Cup</h1>
        <hr style="color:black" />
    </div>

    <div class="form-group">
        <label for="exampleFormControlInput1">Cup Name</label>
        <input asp-for="@Model.CupName" type="text" class="form-control" id="exampleFormControlInput1" required="true">
    </div>

    <div class="form-group">
        <label for="exampleFormControlSelect1">Teams</label>
        <select asp-for="@Model.CupParticipants" class="form-control" id="exampleFormControlSelect1">
            <option value="4">4</option>
            <option value="8">8</option>
            <option value="16">16</option>
            <option value="32">32</option>
            <option value="64">64</option>
        </select>
    </div>
    <hr style="width:100%" />
    <div class="form-group">
        <input class="Button" asp-controller="Cup" asp-action="TeamsInput" type="submit" value="Next" />
    </div>
    <hr style="width:100%" />
</form>
</body>